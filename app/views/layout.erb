<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/stylesheets/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/stylesheets/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/application.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

  <title></title>
</head>
<body>
  <div class="header">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h2>ChoreTracker</h2>
        </div>
          <!-- if a user is logged in -->
          <% if current_user %>
            <!-- checks to see if user is in a group -->
            <div class="col-md-4 group_buttons">
              <!-- option to leave the group if they are -->
              <% if current_group %>
                <p>You are a part of <%= current_user.group.group_name %>
                <form method="post" action="/leave">
                  <input type="hidden" name="_method" value="PUT">
                  <input type="submit" value="Stop helping these people!">
                </form>
              <!-- option to create or join a group if not -->
              <% else %>
                <form method="post" action="/create">
                  <input type="text" name="group_name">
                  <input type="submit" value="Create a Group">
                </form>
                <form method="post" action="/join">
                  <input type="hidden" name="_method" value="PUT">
                  <input type="text" name="group_name">
                  <input type="submit" value="Join a Group">
                </form>
              <% end %>
            </div>

            <!-- logs the user out -->
            <div class="col-md-4">
              <p>Hello, <%= current_user.user_name %></p>
              <form method="get" action="/logout">
                <input type="submit" value="Get me outta here!">
              </form>
            </div>

          <!-- if user is not logged in give the option to log in -->
          <% else %>
            <div class="col-md-3 pull-right">
              <form method="post" action="/login">
                <h4>Sign In</h4>
                  <label>Username:</label>
                  <input type="text" name="user_name">
                  <label>Password:</label>
                  <input type="text" name="password">
                  <input type="submit" name="log me in!">
                </div>
              </form>
            </div>
          <% end %>

      </div>
    </div>
  </div>
  <%= yield %>

  <div class="footer">
    <div class="container">
    </div>
  </div>
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->

  <link rel="stylesheet" href="/stylesheets/normalize.css">
  <link rel="stylesheet" href="/stylesheets/application.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

  <title></title>
</head>
<body>
  <div class="header">
    <div class="container">
      <div class="row">
        <div class="col-md-4 logo">
          <% if current_user %>
            <a href="/main"><h2>ChoreTracker</h2></a>
            <h4>make the boring bits of life easy</h4>
          <% else %>
            <a href="/"><h2>ChoreTracker</h2></a>
            <h4>make the boring bits of life easy</h4>
          <% end %>
        </div>
          <!-- if a user is logged in -->
          <% if current_user %>
            <!-- checks to see if user is in a group -->
            <div class="col-md-4 pull-right group_buttons">

              <!-- logs the user out -->
              <div class="pull-right">
                <p class="inline-block">Hello, <%= current_user.user_name %>!</p>
                <form class="inline-block" method="get" action="/user/logout">
                  <button type="submit" class="btn btn-default">Logout</button>
                </form>
              </div>

              <!-- option to leave the group if they are -->
              <% if current_group_id %>
                <div class="pull-right">
                <p class="inline-block">Group: <%= current_user.group.group_name %></p>
                  <form class="inline-block" method="post" action="/group/leave">
                    <input type="hidden" name="_method" value="PUT">
                    <button type="submit" class="btn btn-default">Leave</button>
                  </form>
                </div>
              <% end %>
            </div>
          <!-- if user is not logged in give the option to log in -->
          <% else %>
            <div class="col-md-5 pull-right">

              <form class="form-inline" method="post" action="/user/login">
                <div class="inline-block">
                  <label class="block">Username:</label>
                  <input type="text" name="user_name" placeholder="username">
                </div>
      
                <div class="inline-block">
                  <label class="block">Password:</label>
                  <input type="password" name="password" placeholder="password">
                </div>
                <div class="inline-block">
                  <button type="submit" class="btn btn-default">werkwerk</button>
                </div>

              </form>
            </div>
          <% end %>

      </div>
    </div>
  </div>
    <%= yield %>

  <!-- footer -->
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
         <address>
          <strong>Lighthouse Labs - 05/23 Cohort</strong>
          <br>
          <br>
          46 Spadina Ave - 4th Floor
          <br>
          Toronto, On M5V 2H8
          <br>
          e: <a href="mailto:hello@lighthouselabs.ca">hello@lighthouselabs.ca</a>
         </address>
        </div>

        <div class="col-md-4">
          <br>
          <p>Created with care by:</p>
          <p>Spencer Toole</p><a href="https://github.com/Gwrrrk"><div class="github"></div></a>
          <p>Hon Ip</p><a href="https://github.com/honbobau"><div class="github"></div></a>
        </div>

        <div class="col-md-3">
          <p class="text-right" id="watermark">2016 Lighthouse Labs <span class="glyphicon glyphicon-copyright-mark"></span></p>
        </div>
      </div>
    </div>
  </div>

  <script src="/javascript/application.js"></script>

</body>
</html>

